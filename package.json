{
  "name": "local-code-assistant",
  "displayName": "Local Code Assistant",
  "description": "Chat and inline code suggestions using local LLMs via LM Studio",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "onCommand:extension.chatWithLLM",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.chatWithLLM",
        "title": "Ask LLM"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "build": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.85.0",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "node-fetch": "^2.6.9"
  }
}
